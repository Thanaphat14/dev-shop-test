<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Category</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="css/style.css"/>
    <link rel="stylesheet" href="css/profile.css"/>
    <link rel="stylesheet" href="css/categoryList.css"/>
    <link rel="stylesheet" href="css/market.css"/>
</head>
<body>

<!--HOME _PAGE-->
<!--NAV _BAR-->
<nav class="homeTitle-min navColor nav-height" style="padding-top: 6px">
    <div class="container-fluid">
        <a class="homeTitle-mg navbar-brand navbarX hideNavText" href="/centreHome">SEASON GREEN</a>
        <a class="homeTitle-mg navbar-brand navbarX hideNavText2 showText2" href="/centreHome">CATEGORY</a>
    </div>

    <div class="profilePst">
        <div style="margin-right: 1%; margin-top: 8px; color: white">ADMIN</div>

        <div style="margin-left: 10px" class="homeProfile" >
            <div class="homeProfileInner" style="margin-top: 3px" >
                <div class="homeIcon">
                </div>
            </div>
        </div>
    </div>
    <form action="/logOut" method="post">
        <button class="logoutBtn">LOGOUT</button>
    </form>
</nav>

<div class="hideNavText2 showHiddenBar">
    <a class=" showHiddenBar" href="/centreHome">CONTROL CENTER</a>
</div>

<div class="row" style="position: relative; left: 12px">



        <div class=" col-12 ">

            <div class="cat-list-pst tp-margin " >

                <div style="display: flex">
                    <p class="hideCatTxt col-12 titleDeco" style="font-size: 2rem; font-weight: bold">CATEGORY LIST</p>

                    <form action="/addCategory" method="get">
                        <button type="submit" class="pst-X col-lg-1 col-md-4 col-sm-4 col-2" style="height: 40px; width: 140px; margin-top: 12px; background-color: #1a8c3b; color: white; border: none; font-weight: lighter;">ADD CATEGORY</button>
                    </form>
                </div>

                <div class="scroll-box" style="height: 70vh;  overflow: scroll">

                    <% for(let i = 0 ; i < categoryList.length ; i ++){ %>

                        <div class=" row outline list-box-lg list-box-md list-box-sm">
                            <p class=" col-lg-2 col-md-2 col-sm-2 col-2" style="text-align: left; padding-left: 12px">ID: <%= categoryList[i].category_id %></p>

                            <div class=" col-lg-7 col-md-7 col-sm-7 col-7" style="display: flex" >
                                <div  style="text-transform: uppercase; text-align: center; width: 50%" > <%= categoryList[i].category_name %> </div>
                            </div>

                            <div class=" col-lg-2 col-md-2 col-sm-2 col-2">
                                <form action="/editCategory" method="post">
                                    <button type="submit" class="list-box-btn-lg" name="categoryEdit" value="<%= categoryList[i].category_name %>">EDIT</button>
                                </form>
                            </div>

                            <div class=" col-lg-1 col-md-1 col-sm-1 col-1">
                                <form action='/removeCategory' method="post">
                                    <button type="submit" class="list-box-Xbtn-lg list-box-Xbtn-md list-box-Xbtn-sm" name="removeCategory"  value="<%= categoryList[i].category_id %>">X</button>
                                </form>
                            </div>

                        </div>

                    <% } %>
                </div>

                <form action="/addCategory" method="get">
                    <button type="submit" class="hiddenBTN" style="height: 40px; width: 100%; margin-top: 12px; background-color: #1a8c3b; color: white; border: none; font-weight: lighter;">ADD CATEGORY</button>
                </form>
            </div>
        </div>

    </div>


    <!--            CONTROL PANEL-->



</div>

</body>
</html>
